          ElevatedButton(
            onPressed: () {
              Navigator.pop(context);
              // Navigate to create deal screen in edit mode
              context.go('/business/create-deal?mode=edit&id=mock_deal_1');
            },
            child: const Text('Edit Current Deal'),
          ),
        ],
      ),
    );
  }

